{
  "extends": "@react-native/typescript-config",
  "compilerOptions": {
    "types": [
      "jest"
    ],
    "baseUrl": ".",
    "paths": {
      "@components": [
        "src/components"
      ],
      "@components/*": [
        "src/components/*"
      ],
      "@screens": [
        "src/screens"
      ],
      "@screens/*": [
        "src/screens/*"
      ],
      "@theme": [
        "src/theme"
      ],
      "@theme/*": [
        "src/theme/*"
      ],
      "@contexts": [
        "src/contexts"
      ],
      "@contexts/*": [
        "src/contexts/*"
      ],
      "@services": [
        "src/services"
      ],
      "@services/*": [
        "src/services/*"
      ],
      "@types": [
        "src/types"
      ],
      "@types/*": [
        "src/types/*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "**/node_modules",
    "**/Pods"
  ]
}